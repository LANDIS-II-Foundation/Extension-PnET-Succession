<?xml version="1.0"?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>


  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="gdal_csharp"
                          publicKeyToken="db5a52b08dc5b321"
                          culture="neutral" />
        <bindingRedirect oldVersion="1.0.3725.37720" newVersion="1.0.3671.21225" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime> 

  <appSettings>
    <add key="version" value="6.0" />
    <add key="release" value="b2" />
  </appSettings>

  <log4net>
    <appender name="FileAppender" type="log4net.Appender.FileAppender">
      <file value="${WORKING_DIR}/Landis-log.txt" />
      <appendToFile value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d - %m%n" />
      </layout>
    </appender>

    <!-- Setup the root category, add the appenders and set the default level -->
    <root>
      <level value="INFO" />
      <appender-ref ref="FileAppender" />
    </root>
  </log4net>
</configuration>
